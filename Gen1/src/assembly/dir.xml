<assembly>
    <id>dir</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/jlauncher/jlauncher/bin/unix/jlauncher
            </source>
            <outputDirectory>/</outputDirectory>
            <destName>gen1</destName>
        </file>
        <file>
            <source>target/jlauncher/jlauncher/bin/win32/jlauncher.exe
            </source>
            <outputDirectory>/</outputDirectory>
            <destName>gen1.exe</destName>
        </file>
        <file>
            <source>target/jlauncher/jlauncher/bin/win32/jlauncherc.exe
            </source>
            <outputDirectory>/</outputDirectory>
            <destName>gen1-c.exe</destName>
        </file>
        <file>
            <source>target/jlauncher/jlauncher/bin/win64/jlauncher.exe
            </source>
            <outputDirectory>/</outputDirectory>
            <destName>gen1-win64.exe</destName>
        </file>
        <file>
            <source>target/jlauncher/jlauncher/bin/win64/jlauncherc.exe
            </source>
            <outputDirectory>/</outputDirectory>
            <destName>gen1-c-win64.exe</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>true</useProjectArtifact>
            <excludes>
                <exclude>*:jlauncher:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
